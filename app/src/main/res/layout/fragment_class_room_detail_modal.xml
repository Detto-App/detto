<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cus_white"
    tools:context=".TeacherActivity.Fragments.ClassRoomDetailModal">

    <ImageButton
        android:id="@+id/classRoomDetailModalDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:background="@android:color/transparent"
        android:padding="4dp"
        android:src="@drawable/ic_baseline_delete_forever_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/classroomModalDelete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:gravity="center|start"
        android:text="Delete"
        android:textColor="@color/cus_black"
        app:layout_constraintBottom_toBottomOf="@+id/classRoomDetailModalDeleteButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/classRoomDetailModalDeleteButton"
        app:layout_constraintTop_toTopOf="@+id/classRoomDetailModalDeleteButton" />
</androidx.constraintlayout.widget.ConstraintLayout>